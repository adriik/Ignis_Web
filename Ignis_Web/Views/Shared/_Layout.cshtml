<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — IgnisWeb</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" type="image/x-icon" href="~/Img/if_fire_173014.ico" />
</head>
<body class="body">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#"><span><img src="~/Img/if_fire_173014.ico" style="width: 25px;" title="title" alt="additional title" /></span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @Html.ActionLink("Strona główna", "Start", "General", null, new { @class = "nav-link" })<span class="sr-only">(current)</span>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Frekwencja
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Płaskowyż Lodowego Ostrza - 99LvL", "Frequency", "IBP", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Świątynia Słońca Wiecznego Snu - 100LvL", "Frequency", "SToES", null, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Itemy
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Płaskowyż Lodowego Ostrza - 99LvL", "Items", "IBP", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Świątynia Słońca Wiecznego Snu - 100LvL", "Items", "SToES", null, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Podsumowanie
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Płaskowyż Lodowego Ostrza - 99LvL", "Summary", "IBP", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Świątynia Słońca Wiecznego Snu - 100LvL", "Summary", "SToES", null, new { @class = "dropdown-item" })
                    </div>
                </li>
                @if (Session["user"] != null)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Raport
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            @Html.ActionLink("Frekwencja", "FreqAppka", "FreqApp", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Itemy", "AddItem", "AddItem", null, new { @class = "dropdown-item" })
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Ustawienia
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            @Html.ActionLink("IBP WSP", "IBP", "Settings", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("SToES WSP", "SToES", "Settings", null, new { @class = "dropdown-item" })
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                }

            </ul>
            @if (Session["user"] == null)
            {
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">@Html.ActionLink("Zaloguj", "Login", "Account", null, new { @class = "nav-link" })</li>
                </ul>
            }
            else
            {
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">Witaj @Session["user"].ToString()!</li>
                </ul>
            }


        </div>
    </nav>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:white">&copy; @DateTime.Now.Year — IgnisWeb</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
