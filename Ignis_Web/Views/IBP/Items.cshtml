@{
    ViewBag.Title = "Drop";
}
<h2>@ViewBag.Title.</h2>
<div class="jumbotron jumbotron-opacity">
    <div class="row">
        @foreach (var czlonek in ViewBag.listDrop)
        {

            <div class="col">
                <h3>@czlonek.Nickname</h3>
                <table class="table table-striped table-dark table-max-width">

                    <tbody>
                        @foreach (var drop in czlonek.ItemList)
                        {
                            <tr>
                                <td>@drop</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
    </div>
</div>