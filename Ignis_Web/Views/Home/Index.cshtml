@{
    ViewBag.Title = "Home Page";
}

<div>
    <div class="table-responsive-xl">
        <table class="table table-dark text-center table-striped table-hover">
            <tr>
                <td>XXXXX</td>
                <td>WSP</td>
                @foreach (var czlonek in ViewBag.People)
                {

                    <td>@czlonek.Nickname</td>

                }
            </tr>
            @for (int i = 1; i <= 5; i++)
            {
                <tr>
                    <td>Boss @i</td>
                    <td> </td>
                    @foreach (var czlonek in ViewBag.People)
                    {
                        switch (i)
                        {
                            case 1:
                                <td style="@czlonek.Kolor">@czlonek.Pierwszy</td>
                                break;
                            case 2:
                                <td>@czlonek.Drugi</td>
                                break;
                            case 3:
                                <td>@czlonek.Trzeci</td>
                                break;
                            case 4:
                                <td>@czlonek.Czwarty</td>
                                break;
                            case 5:
                                <td>@czlonek.Piaty</td>
                                break;
                        }
                    }
                </tr>
            }
            <tr>
                <td>Suma</td>
                <td>99999</td>
            </tr>

        </table>
        </div>
    </div>
